<div class="col-md-8 mx-auto mb-5">
  {{#if producto}}
    <form onsubmit="return actualizarProducto('{{producto.id}}')">
  {{else}}
    <form onsubmit="return crearProducto()">
  {{/if}}
    <fieldset class="card">
      {{#if producto}}
        <div class="card-header bg-success text-light">Actualizar el producto</div>
      {{else}}
        <div class="card-header bg-success text-light">Agregar un nuevo producto</div>
      {{/if}}
      <div class="card-body">
        <div class="mb-2">
          <label for="nombre" class="form-label">Titulo:</label>
          <input type="text" name="nombre" id="nombre" class="form-control" value="{{producto.nombre}}" />
        </div>
        <div class="mb-2">
          <label for="descripcion" class="form-label">Descripción:</label>
          <textarea name="descripcion" id="descripcion" class="form-control">{{producto.descripcion}}</textarea>
        </div>
        <div class="row">
        <div class="mb-2 col-md-6">
          <label for="precio" class="form-label">Precio:</label>
          <input type="number" name="precio" id="precio" class="form-control" value="{{producto.precio}}" />
        </div>
        <div class="mb-2 col-md-6">
          <label for="foto" class="form-label">Nombre de la imagen:</label>
          <input type="text" name="foto" id="foto" class="form-control" value="{{producto.foto}}" />
          <small class="text-black-50">Ingresar N&deg; desde el 1 al 300</small>
        </div>
        </div>
        <div class="row">
        <div class="mb-2 col-md-6">
          <label for="codigo" class="form-label">Código:</label>
          <input type="number" name="codigo" id="codigo" class="form-control" value="{{producto.codigo}}" />
        </div>
        <div class="mb-2 col-md-6">
          <label for="stock" class="form-label">Stock:</label>
          <input type="number" name="stock" id="stock" class="form-control" value="{{producto.stock}}" />
        </div>
        </div>
        <input type="hidden" id="form" name="form" value="1" />
        {{#if producto}}
          <button class="btn btn-primary btn float-right mt-3">Actualizar producto</button>
          <a class="btn btn-danger text-white btn float-right mt-3 mr-2" onclick="location.href = '/productos'">Cancelar</a>
        {{else}}
          <button class="btn btn-primary btn float-right mt-3">Agregar producto</button>
        {{/if}}
      </div>
    </fieldset>
  </form>
</div>